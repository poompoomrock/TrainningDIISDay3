@page "/counter"
@rendermode InteractiveAuto

@using PersonApp.Client.Pages.Person

@inject SingletonService singleton
@inject ScopeService scope
@inject TransientService transient
@* @inject IJSRuntime js *@

<PageTitle>Counter</PageTitle>

<h1 style="color:@Color;">Authentication Check</h1>

<h1 style="color:@AppState.Color;font-size:@AppState.Size;">Counter</h1>

<p role="status">Current count: @currentCount</p>
<p>Singleton count: @singleton.Value</p>
<p>Transient count: @transient.Value</p>
<p>Scoped count: @scope.Value</p>

<input type="number" @bind="currentCount" />

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button @onclick="ShowAlert">Show Alert</button>
